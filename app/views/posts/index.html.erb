<p id="notice"><%= notice %></p>

<h1>Pet Fox Petition Forums</h1>

<table id="forumtable">
  <thead>
    <tr>
      <th style="text-decoration: underline">Title</th>
      <th colspan="3"></th>
      <th style="text-decoration: underline">Created</th>
      <th colspan="3"></th>
      <th style="text-decoration: underline">Author</th>
      <th colspan="3"></th>
      <th style="text-decoration: underline">Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <th colspan="3"></th>
        <td><%= time_ago_in_words(post.created_at) %> ago</td>
        <th colspan="3"></th>
        <td><%= post.user.name %></td>
        <th colspan="3"></th>
        <td><%= post.comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div id="buttons">
  <% if user_signed_in? %>
    <%= link_to 'New Post', new_post_path %>
  <% else %>
  <h3>Login to create a new topic.</h3>
  <% end %>
</div>
